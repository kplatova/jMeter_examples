          <stringProp name="BeanShellSampler.query">import java.security.MessageDigest;
import org.apache.commons.codec.binary.Base64;
import org.testng.annotations.Test;

String [] params = Parameters.split(&quot;,&quot;);

String text = params[0];
MessageDigest md = MessageDigest.getInstance(&quot;SHA-256&quot;);

md.update(text.getBytes(&quot;UTF-8&quot;));
byte[] digest = md.digest();

StringBuffer sb = new StringBuffer();
for(byte b : digest) {
    if (b &gt; 0 &amp;&amp; b &lt; 16) {
        sb.append(&quot;0&quot;);
    }
    sb.append(Integer.toHexString(b &amp; 0xff));
}

System.out.println(&quot;SHA-256: &quot; + new String(digest));
System.out.println(&quot;SHA-256 (decoded): &quot; + sb.toString());

byte[] encoded = Base64.encodeBase64(digest);
//String encText = (new String(encoded)).toUpperCase();
String encText = Base64.encodeBase64String(digest).toUpperCase();

System.out.println(&quot;Base64 Encoded: &quot; + encText);

byte[] decoded = Base64.decodeBase64(encoded);

System.out.println(&quot;Base64 Decoded: &quot; + new String(decoded));

vars.put(&quot;encodedValue&quot;,encText);
</stringProp>
